{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "pdr-lps",
    "projects": {
        "oarng": {
            "projectType": "library",
            "root": "lib/libs/oarng",
            "sourceRoot": "lib/libs/oarng/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "lib/libs/oarng/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "lib/libs/oarng/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "lib/libs/oarng/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "lib/libs/oarng/src/test.ts",
                        "tsConfig": "lib/libs/oarng/tsconfig.spec.json",
                        "karmaConfig": "lib/libs/oarng/karma.conf.js"
                    }
                }
            }
        },
        "midas-portal": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:application": {
                    "strict": true
                }
            },
            "root": "midas-portal",
            "sourceRoot": "midas-portal/src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "outputPath": "dist/wizard",
                        "index": "midas-portal/src/index.html",
                        "main": "midas-portal/src/main.ts",
                        "polyfills": "midas-portal/src/polyfills.ts",
                        "tsConfig": "midas-portal/tsconfig.app.json",
                        "assets": [
                            "midas-portal/src/favicon.ico",
                            "midas-portal/src/assets",
                            {
                                "glob": "**/*",
                                "input": "./node_modules/oarng/src/assets/",
                                "output": "./assets/"
                            }
                        ],
                        "styles": [                            
                            "node_modules/bootstrap/dist/css/bootstrap.css",
                            "lib/libs/oarng/src/styles/font-awesome/css/font-awesome.min.css",
                            "lib/libs/oarng/src/styles/main.css",
                            "midas-portal/src/styles.css"
                        ],
                        "scripts": [
                            "node_modules/bootstrap/dist/js/bootstrap.js"
                        ]
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "500kb",
                                    "maximumError": "2mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "2kb",
                                    "maximumError": "4kb"
                                }
                            ],
                            "fileReplacements": [
                                {
                                    "replace": "midas-portal/src/environments/environment.ts",
                                    "with": "midas-portal/src/environments/environment.prod.ts"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "buildOptimizer": false,
                            "optimization": false,
                            "vendorChunk": true,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "namedChunks": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "production": {
                            "browserTarget": "midas-portal:build:production"
                        },
                        "development": {
                            "browserTarget": "midas-portal:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "wizard:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "midas-portal/src/test.ts",
                        "polyfills": "midas-portal/src/polyfills.ts",
                        "tsConfig": "midas-portal/tsconfig.spec.json",
                        "karmaConfig": "midas-portal/karma.conf.js",
                        "assets": [
                            "midas-portal/src/favicon.ico",
                            "midas-portal/src/assets"
                        ],
                        "styles": [
                            "midas-portal/src/styles.css"
                        ],
                        "scripts": []
                    }
                }
            }
        }
    },
    "defaultProject": "oarng"
}
