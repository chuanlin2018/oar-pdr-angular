{
    "compileOnSave": false,
    "compilerOptions": {
      "module": "esnext",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2015",
      "lib": [
        "es2017",
        "dom"
      ],
      "paths": {
          "@angular/*": ["./node_modules/@angular/*"]
      }
    }
  }
  