{
  "name": "my-awesome-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:lib && npm run test:showcase",
    "test:lib": "jest --config ./projects/my-awesome-lib-with-jest/jest.config.js",
    "test:lib:coverage": "jest --coverage --config ./projects/my-awesome-lib-with-jest/jest.config.js",
    "test:showcase": "jest --config ./projects/my-awesome-lib-with-jest-showcase/jest.config.js",
    "test:lib:watch": "jest -o --watch --config ./projects/my-awesome-lib-with-jest/jest.config.js",
    "test:showcase:coverage": "jest --coverage --config ./projects/my-awesome-lib-with-jest/jest.config.js",
    "test:showcase:watch": "jest -o --watch --config ./projects/my-awesome-lib-with-jest-showcase/jest.config.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/cdk": "^12.0.0",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/platform-browser": "~13.3.0",
    "@angular/platform-browser-dynamic": "~13.3.0",
    "@angular/router": "~13.3.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.11",
    "@angular/cli": "~13.3.11",
    "@angular/compiler-cli": "~13.3.0",
    "@types/jasmine": "~3.10.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^12.11.1",
    "husky": "^8.0.3",
    "jasmine-core": "~4.0.0",
    "jest": "^29.5.0",
    "jest-cli": "^29.5.0",
    "jest-preset-angular": "^13.0.1",
    "ng-packagr": "^13.0.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.0.5",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~4.6.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": ["<rootDir>/jest.base.setup.ts"],
    "globalSetup": "jest-preset-angular/global-setup"
  }
}
